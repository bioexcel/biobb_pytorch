{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_pytorch/json_schemas/1.0/build_model",
    "name": "biobb_pytorch BuildModel",
    "title": "Build a Molecular Dynamics AutoEncoder (MDAE) PyTorch model.",
    "description": "Builds a PyTorch autoencoder from the given properties.",
    "type": "object",
    "info": {
        "wrapped_software": {
            "name": "PyTorch",
            "version": ">=1.6.0",
            "license": "BSD 3-Clause"
        },
        "ontology": {
            "name": "EDAM",
            "schema": "http://edamontology.org/EDAM.owl"
        }
    },
    "required": [
        "input_stats_pt_path"
    ],
    "properties": {
        "input_stats_pt_path": {
            "type": "string",
            "description": "Path to the input model statistics file",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_pytorch/raw/master/biobb_pytorch/test/reference/mdae/ref_input_model.pt",
            "enum": [
                ".*\\.pt$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.pt$",
                    "description": "Path to the input model statistics file",
                    "edam": "format_2333"
                }
            ]
        },
        "output_model_pth_path": {
            "type": "string",
            "description": "Path to save the model in .pth format",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_pytorch/raw/master/biobb_pytorch/test/reference/mdae/output_model.pth",
            "enum": [
                ".*\\.pth$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.pth$",
                    "description": "Path to save the model in .pth format",
                    "edam": "format_2333"
                }
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "model_type": {
                    "type": "string",
                    "default": "AutoEncoder",
                    "wf_prop": false,
                    "description": "Name of the model class to instantiate (must exist in biobb_pytorch.mdae.models)."
                },
                "n_cvs": {
                    "type": "integer",
                    "default": 1,
                    "wf_prop": false,
                    "description": "Dimensionality of the latent space."
                },
                "encoder_layers": {
                    "type": "array",
                    "default": "[16]",
                    "wf_prop": false,
                    "description": "List of integers representing the number of neurons in each encoder layer."
                },
                "decoder_layers": {
                    "type": "array",
                    "default": "[16]",
                    "wf_prop": false,
                    "description": "List of integers representing the number of neurons in each decoder layer."
                },
                "options": {
                    "type": "object",
                    "default": {
                        "norm_in": {
                            "mode": "min_max"
                        }
                    },
                    "wf_prop": false,
                    "description": "Additional options (e.g. norm_in, optimizer, loss_function, device, etc.)."
                }
            }
        }
    },
    "additionalProperties": false
}